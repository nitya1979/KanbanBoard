<!DOCTYPE html>
<html ng-app="kanbanBoard">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
</head>
<body style="background-color:lightgray">
    <div class="navbar navbar-inverse navbar-fixed-top" ng-controller="menuController">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("KanbanBoard", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <button type="button" class="btn btn-info" ng-click="addProject()" ng-show="isAuth">New Project</button>
                </form>

                <form class="navbar-form navbar-right" role="button">
                    <button type="button" class="btn btn-info" ng-click="doLogin()"  ng-hide="isAuth">Login</button>
                    <button type="button" class="btn btn-success" ng-click="doRegister()" ng-hide="isAuth">Register</button>
                    <button type="button" class="btn btn-danger" ng-click="doLogout()" ng-show="isAuth">Logout</button>
                </form>

            </div>
        </div>
    </div>
    <div class="container-fluid body-content" style="padding-top:20px; background-color:lightgray" ng-view="/Login">
        @RenderBody()

    </div>
        <footer style="position:absolute; height:60px; bottom:0px; width:100%; background-color:darkgrey; padding-top:10px">
            <div class="container-fluid">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </div>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/bootstrap-datetimepicker-build.less" rel="stylesheet/less" />
    <script src="http://lesscss.googlecode.com/files/less-1.3.0.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
