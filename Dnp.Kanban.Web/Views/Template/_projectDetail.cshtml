@using Dnp.Common.AngularHtmlHelper
@model Dnp.Kanban.Domain.Project
    <style type="text/css">
        .ng-invalid{
            border-color : red;
        }
    </style>
<div class="row">
    <div class="col-md-offset-3 col-md-6">

        <div class="panel panel-default">
            <div class="panel-heading">
                <p class="panel-title">Project Detail - {{Name}}</p>
            </div>
            <div class="panel-body">
                @using (Html.NgBeginForm("form-horizontal"))
                {
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            @Html.NgTextBoxFor(p => p.Name, "form-control")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="Descriptiion">Description</label>
                        <div class="col-sm-10">
                            
                            @Html.NgTextAreaFor(p => p.Description, "form-control")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="StartDate">Start Date</label>
                        <div class="col-sm-10">
                            @Html.NgDateBoxFor(p => p.StartDate, "form-control", "glyphicon glyphicon-calendar", "startDateOpen", "MM/dd/yyyy", "startDatePopup.opened", "startDateOptions")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="StartDate">End Date</label>
                        <div class="col-sm-10">
                            @Html.NgDateBoxFor(p => p.EndDate, "form-control", "glyphicon glyphicon-calendar", "endDateOpen", "MM/dd/yyyy", "endDatePopup.opened", "endDateOptions")
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" ng-disabled="myForm.Name.$invalid" ng-click="save()" class="btn btn-info">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
