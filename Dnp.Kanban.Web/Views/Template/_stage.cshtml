@using Dnp.Common.AngularHtmlHelper
@model Dnp.Kanban.ViewModel.ProjectStageViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="cancel()"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">{{dnpTaskViewModel.ShortDescription}}</h4>
</div>
<div class="modal-body">

    @using (Html.NgBeginForm("form-horizontal"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.StageName, new {@class="col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.NgTextBoxFor(m => m.StageName, new { @class = "form-control" })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Order, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.NgComboBoxFor( m => m.Order, "orderList", null, null, new { @class ="form-control"})
                
            </div>
        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="cancel()">Close</button>
    <button type="button" class="btn btn-primary" ng-click="ok()">Save</button>
</div>
