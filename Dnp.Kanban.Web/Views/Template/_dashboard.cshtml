
<div class="row">
    <div class="col-md-3" ng-repeat="proj in projects">
        <div class="panel">
            <div class="panel-heading">
                <p class="panel-title"><a href="#/Project/{{proj.ID}}">{{proj.Name}}</a></p>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8">
                        <canvas id="doughnut" class="chart chart-doughnut"
                                chart-data="proj.ChartData" chart-labels="proj.ChartLabel" chart-colors="colors"></canvas>
                    </div>
                </div>
                <div>
                    Start Date : {{proj.StartDate}}
                </div>
            </div>
        </div>
    </div> 
</div>
